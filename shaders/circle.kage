//kage:unit pixels
package main

func Fragment(targetCoords vec4, _ vec2, color vec4, customVAs vec4) vec4 {
	center := customVAs.xy
	radius := customVAs.z

	dist := distance(targetCoords.xy-imageDstOrigin(), center)
	alpha := 1.0 - smoothstep(radius-1.333, radius, dist)
	alpha = pow(alpha, 1.0/2.2)
	return color * alpha
}
